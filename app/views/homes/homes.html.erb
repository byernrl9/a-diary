<div class="main-container">  
  <% if user_signed_in? %>
    <div class="left-content">
      <p><%= link_to "A-Diary", albums_path %></p>
    </div>
  <% else %> 
    <div class="left-content">
      <p>A-Diary</p>
    </div>
  <% end%> 

  <div class="right-content">
  
   <% if user_signed_in? %>
     <div class="user"> 
      <%= link_to current_user.nickname, "#", class: "sign-up" %> 
     </div> 
     <div class="user-log">
      <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: "log" %> 
     </div>
   <% else %> 
     <div class="user">
       <%= link_to 'Sing up', new_user_registration_path, class: "sign-up" %> 
     </div>
     <div class="user-log">
      <%= link_to 'Log in', new_user_session_path, class: "log" %> 
     </div>
   <% end%> 
  </div>
</div>