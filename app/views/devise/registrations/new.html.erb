<div class="contents-row">
  <div class="container">
    <h2>Sign up</h2>

    <%= render "devise/shared/error_messages", resource: resource %>

    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      
      <div class="field">
        <%= f.label :nickname %><br />
        <%= f.text_field :nickname,  maxlength:"40" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, placeholder:"PC・携帯どちらでも可" %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, placeholder:"6文字以上の半角英数字" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, placeholder:"同じパスワードを入力して下さい"
         %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
  </div>
</div>