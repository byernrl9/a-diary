<div class="album-header">
  <div class="left-header">
    <div class="header-title">
      hogefuga
    </div>
  </div>
  <div class="right-header">
    <div class="header-button">
     <%= link_to 'アルバムを閉じる', albums_path(@album) %>
    </div>
  </div>
</div>

<div class="album-content">
  <%= month_calendar events: @diaries do |date, diaries| %>
    <%= date.day %>
     <% diaries.each do |diary|%>
        <div class="diary-img">
          <%# <%= link_to diary_path(diary.id) do %>
            <%=  image_tag diary.image.variant(resize: '100x100'), class: "image" if diary.image.attached? %> 
          <%# <% end %> 
        </div>

        <div class="diary-title">
          <%= diary.title %>
        </div>
      <% end %>
  <% end %>
</div>

<div class="diary">
  <div class="new-diary">
    <%= link_to "Make memory", new_album_diary_path %>
  </div>
</div>